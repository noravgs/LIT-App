        <link rel="stylesheet" href="css/style.css">   
    </head>
    <body>
    <h1>The Category is Books!</h1>
    <h2>Share your favorite LGBTQIA+ book</h2>
    <div className="container">
        <ul className="books">
        <% for(let i=0; i < books.length; i++) {%>
            <li class="books">
                <!-- 'books' has replaced 'info' -->
                <!-- 'books' is referring the Schema collection name where the info on each book is being stored-->
                <span><%= books[i].bookName %></span>
                <span><%= books[i].authorName %></span>
                <p><%= books[i].reasonForLiking %></p>
                <span><%= books[i].likes %></span>
                <!-- form for like button -->
                <form action="/books/likeBook/<%= books[i]._id %>?_method=PUT" method="POST">
                    <button type="submit">like</button>
                </form>
                <!-- form for delete button -->
                <!-- works, but removed temporarily to prevent entries from being deleted -->
                <!-- <form action="/books/deleteBook/<%= books[i]._id %>?_method=DELETE" method="POST">
                    <button type="submit">Delete</button>
                </form> -->
            </li>
        <% } %>
        </ul>
    </div>

    <h2>Add A Book:</h2>

    <form action="/books/addBook" method="POST">
        <input type="text" placeholder="Book Name" name="bookName">
        <input type="text" placeholder="Author Name" name="authorName">
        <input type="text" class="long-text" placeholder="Reason You like this Book...." name="reasonForLiking">
        <!-- <input type="submit"> -->
        <button class="btn btn-2 btn-2b" type="submit">Add Book</button>
    </form>
